@model ProductViewModel



<form enctype="multipart/form-data" asp-controller="Product" asp-action="AddProduct" method="post">
    <input type="hidden" value="1" asp-for="UserId" />
    <div class="form-group">
        <label for="name">Name</label>
        <input asp-for="Name" type="text" class="form-control" id="name" placeholder="Enter name">
    </div>
    <div class="form-group">
        <label for="explanation">Explanation</label>
        <input asp-for="Explanation" type="text" class="form-control" id="explanation" placeholder="explanation">
    </div>
    <div class="form-group">
        <label for="color">Color</label>
        <input asp-for="Color" type="color" class="form-control" id="color" placeholder="color">
    </div>
    <div class="form-group">
        <label for="size">Size</label>
        <input asp-for="Size" type="text" class="form-control" id="size" placeholder="size">
    </div>
    <div class="form-group">
        <label for="stock">Stock</label>
        <input asp-for="Stock" type="number" class="form-control" id="stock" placeholder="stock">
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        <input asp-for="Price" type="number" class="form-control" id="price" placeholder="price">
    </div>
    <div class="form-group">
        <input asp-for="Photo" type="file" class="form-check-file" id="filehcek">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

